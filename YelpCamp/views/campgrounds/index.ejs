<%- include ("../partials/header") %>

	<div class="container mt-5">
		<header class="jumbotron">
			<div class="container">
				<h1>The Yelp Camp website </h1>
				<p>Explore our hand made list of best campgrounds all over the world, and plan your next adventure!</p>
				<p>
					<a href="/campgrounds/new" class="btn btn-lg btn-info">Add New Campground</a>
				</p>
			</div>
		</header>
		<div class="row r1 text-center">
		<% campgrounds.forEach(function(camp) { %>
			<!-- campgrounds cards -->
			<div class="col-lg-3 col-md-4 col-sm-6 my-2">
				<div class="img-thumbnail img-fluid thumbs1">
					<img src="<%= camp["image"] %>">
					<div class="caption"><h4><%= camp["name"] %><h4></div>
					<p>
						<a href="/campgrounds/<%= camp._id %>" class="btn btn-sm btn-outline-info">more info</a>
					</p>
				</div>
			</div>
<% }); %>
		</div>
	</div>
			
<%- include ("../partials/footer") %>
