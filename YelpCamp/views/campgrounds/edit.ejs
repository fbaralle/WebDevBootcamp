<%- include("../partials/header") %>
<h1>
	Edit Campground
</h1>

<div class="container">
	<div class="row align-items-center">
		<div class="col-md-10">
			<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<label for="name">Name</label>
				<input id="name" class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
			</div>
			<div class="form-group">
				<label for="image">Price</label>
				<input id="image" class="form-control" type="text" name="campground[image]" value="<%= campground.image %>">
			</div>
			<div class="form-group">
				<label for="price">Image URL</label>
				<input id="price" class="form-control" type="text" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01">
			</div>
			<div class="form-group">
				<label for="location">Location</label>
				<input id="location" class="form-control" type="text" name="campground[location]" value="<%= campground.location %>">
			</div>
			<div class="form-group">
				<label for="description">Description</label>
				<textarea id="description" class="form-control" type="text" name="campground[description]"><%= campground.description %></textarea>
			</div>
			<button class="btn btn-primary">Submit!</button>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>