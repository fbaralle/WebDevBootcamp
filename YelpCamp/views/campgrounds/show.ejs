<%- include ("../partials/header") %>

<div class="container mt-5">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">Yelp Camp</p>
			<div class="list-group">
				<li class="list-group-item active">Info 1</li>
				<li class="list-group-item">Info 2</li>
				<li class="list-group-item">Info 3</li>
			</div>
		</div>
		<div class="col-md-9">
			<div class="img-thumbnail thumbs1">
				<img src="<%= campground.image %>" class="img-responsive">
				<div class="caption-full">
					<h4 class="pull-right">$<%= campground.price %>/night</h4>
					<h3><a href="/"><%= campground.name %></a></h3>
					<h3><%= campground.location %></h3>
					<p><%= campground.description %></p>
					<footer class="my-3 blockquote-footer">
						Posted by user: <cite title="Source Title"><%= campground.author.username %></cite>
					</footer>
					<% if (!!currentUser && campground.author.id.equals(currentUser._id)) { %>
						<div class="p-3 d-flex flex-row-reverse">
							<a href="/campgrounds/<%= campground._id %>/edit" class="mx-1 btn btn-light btn-sm">Edit content</a>
							<form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
								<button class="mx-1 btn btn-danger btn-sm">Delete Post</button>
							</form>
						</div>
					<% }; %>
				</div>
			</div>
			<div class="well">
				<div class="text-right">
					<a href="/campgrounds/<%= campground._id %>/comments/new" class="btn btn-sm btn-primary">Comment</a>
				</div>
				<hr>
				<% campground.comments.forEach(function(comment) { %>
						<div class="row">
							<div class="col-md-12">
								<h5><%= comment.author.username %></h5>
								<span class="pull-right">10 days ago</span>
								<p>
									<%= comment.text %>
								</p>
								<% if (!!currentUser && comment.author.id.equals(currentUser._id)) { %>
									<div class="p-1 d-flex flex-row-reverse">
										<a href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit" class="mx-1 btn btn-light btn-sm">Edit</a>
										<form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
											<button class="mx-1 btn btn-danger btn-sm">Delete</button>
										</form>
									</div>
								<% }; %>
							</div>
						</div>
				<% }); %>
			</div>
		</div>
	</div>

<%- include ("../partials/footer") %>